@model IEnumerable<MySchoolSystem.Models.Todo>

@{
    ViewData["Title"] = "Index";
}

<h4>Assingments : Admin View</h4>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table mt-4">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rubric)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @{ var cleanRubric = item.Rubric.Substring(item.Rubric.IndexOf("wwwroot") + 7); }
                @Html.DisplayFor(modelItem => cleanRubric)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @{ var fixedTime = item.ExpirationDate.ToString("MM/dd/yyyy");}
                @Html.DisplayFor(modelItem => fixedTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>

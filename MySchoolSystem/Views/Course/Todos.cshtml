@model List<MySchoolSystem.Models.Todo>

@{ ViewData["Title"] = "Todos"; }
<p>Todos for: @ViewBag.CourseId</p>

@*sort by date*@
@foreach (var t in Model)
{
<p>@t.Id</p>
<p>@t.Type</p>

}

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Add a todo
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form class="modal-content" asp-controller="Course" asp-route-CourseId=@ViewBag.CourseId asp-action="AddTodo">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Creating a new todo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="Type"   class="control-label"></label>
                    <input  class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label"></label>
                    <input  class="form-control" />
                    <span  class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label"></label>
                    <input  class="form-control" />
                    <span  class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label"></label>
                    <input class="form-control" />
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>
@model MySchoolSystem.Models.Course

@{ ViewData["Title"] = "Details"; }

<h4>Course Details</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Subject.SubjectName)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.LastUpdated)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.LastUpdated)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Credits)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Credits)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Instructor.NormalizedUserName)
        </dt>
        <dd class="col-sm-8">
            @{ var instructorFullName = Model.Instructor.NormalizedUserName;}
            @Html.DisplayFor(model => instructorFullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

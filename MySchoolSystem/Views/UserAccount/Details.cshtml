@model CustomIdentityUser

@{
    ViewData["Title"] = "View Profile";
}

<h1>Roles:</h1>
@foreach (var role in ViewBag.roles)
{
    <h4 style="display:inline-block; margin-right:10px">@role  </h4>

}
<hr />

<div>
    <h4>Details:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.FirstName)*@
            Full Name
        </dt>
        <dd class="col-sm-10">
            @{ var fullName = Model.FirstName + " " + Model.LastName;}
            @Html.DisplayFor(model => fullName)
        </dd>
    </dl>
</div>




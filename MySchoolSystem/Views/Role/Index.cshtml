@model ICollection<IdentityRole>;

@{
    ViewBag.Tile = "Roles";
}

<h3>Roles:</h3>
<a asp-action="CreateRole">Create a role</a>
<hr/>
@if (Model.Count ==0)
{
    <p>No Roles</p>
}
<div class="row">
    @foreach (var role in Model)
    {
        <div class="col-4 mb-3">
            <p>@role.Name</p>
        </div>
        <div class="col-8">
            <a asp-controller="role" asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@role.Id">
                Edit
            </a>
            <a asp-controller="role" asp-action="EditAccounts" class="btn btn-outline-primary ml-3" asp-route-roleId="@role.Id">
                Accounts
            </a>
        </div>

    }
</div>